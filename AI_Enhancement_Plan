  5
);

-- Test 6: Verify ticket_messages table changes
select 
  tm.id,
  tm.message_type,
  tm.confidence_score,
  tm.metadata,
  tm.created_at,
  p.email as author_email
from ticket_messages tm
join profiles p on tm.user_id = p.id
where tm.message_type = 'auto_suggestion'
order by tm.created_at desc
limit 5;
```

